<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mrs.infrastructure.datasource.reservation.ReservableRoomMapperExt">
  <resultMap id="BaseResultMap" type="mrs.domain.model.ReservableRoom">
    <id column="reserved_date" property="reservedDate" />
    <id column="room_id" property="roomId" />
  </resultMap>
  <select id="selectByPrimaryKey" parameterType="mrs.domain.model.reservation.ReservableRoomId" resultMap="BaseResultMap">
    SELECT room_id,
           reserved_date
    FROM
         reservable_room
    WHERE
          room_id = #{roomId} AND reserved_date = #{reservedDate}
  </select>
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT room_id,
               reserved_date
        FROM
            reservable_room
    </select>
</mapper>
